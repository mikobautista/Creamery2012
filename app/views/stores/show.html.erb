<h1>Store</h1>

<p>
  <b>Name</b><br>
  <%= @store.name %>
</p>

<p>
  <b>Street</b><br>
  <%= @store.street %>
</p>

<p>
  <b>City</b><br>
  <%= @store.city %>
</p>

<p>
  <b>State</b><br>
  <%= @store.state %>
</p>

<p>
  <b>Zip</b><br>
  <%= @store.zip %>
</p>

<p>
  <b>Phone</b><br>
  <%= @store.phone %>
</p>

<p>
  <b>Active</b><br>
  <%= @store.active %>
</p>

<div class="form-actions">
  <%= link_to 'Back', stores_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_store_path(@store), :class => 'btn' %>
  <%= link_to 'Delete', store_path(@store), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

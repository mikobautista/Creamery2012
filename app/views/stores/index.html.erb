<h1>Stores</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Active</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.alphabetical.each do |store| %>
      <tr>
        <td><%= store.id %></td>
        <td><%= store.name %></td>
        <td><%= store.active ? "Yes" : "No" %></td>
        <td>
          <%= link_to 'View', store_path(store), :class => 'btn btn-mini' %>
          <%= link_to 'Edit', edit_store_path(store), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', store_path(store), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_store_path, :class => 'btn btn-primary' %>

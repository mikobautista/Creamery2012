<h1>Shift Jobs</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Shift</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @shift_jobs.each do |shift_job| %>
      <tr>
        <td><%= shift_job.id %></td>
        <td><%= link_to shift_job.shift_id, shift_job_path(shift_job) %></td>
        <td><%= shift_job.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_shift_job_path(shift_job), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', shift_job_path(shift_job), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_shift_job_path, :class => 'btn btn-primary' %>

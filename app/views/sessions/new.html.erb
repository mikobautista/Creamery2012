<h3>Log In</h3>

<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %><br/>
      <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password %><br/>
      <%= password_field_tag :password %>
  </div>
  
  <p><%= link_to "Forgotten Password?", new_password_reset_path %></p>

  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
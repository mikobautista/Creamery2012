<%= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Assignment</legend>

      <%= f.input :store_id, :label => "Store ID", :as => :integer %>
      <%= f.input :employee_id, :label => "Employee ID", :as => :integer %>
      <%= f.input :pay_level, :label => "Pay Level", :collection => [1, 2, 3, 4, 5, 6] %>
      <%= f.input :start_date, :label => "Start Date", :as => :date, :order => [:month, :day, :year], :start_year => Date.today.year - 20, :end_year => Date.today.year %>
      <%= f.input :end_date, :label => "End Date", :as => :date, :order => [:month, :day, :year], :start_year => Date.today.year - 20, :end_year => Date.today.year %>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', assignments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

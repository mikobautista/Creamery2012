<%= simple_form_for @job, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Job</legend>

      <%= f.input :name, :label => "Name", :as => :string %>
      <%= f.input :description, :label => "Description", :as => :text %>
      <%= f.input :active, :label => "Active", :as => :boolean %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', jobs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.employee.name %></td>
      <td><%= user.email %></td>
      <td><%= user.employee.role.capitalize %></td>
      <td>
          <%= link_to 'View', user_path(user), :class => 'btn btn-mini' %>
            <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini' %>
          <% if current_user != user %>
            <%= link_to 'Delete', user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="smtext">
  <%= will_paginate @users, :previous_label => "&larr;&nbsp;Previous&nbsp;", :next_label => "&nbsp;Next&nbsp;&rarr;" %>
</span>

<%= link_to 'New', new_user_path, :class => 'btn btn-primary' %>

